@model IEnumerable<Miniproyecto.Models.ProductorModel>

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Índice de Productores</title>
</head>
<body>
    <p>
        <a asp-action="Create" class="btn btn-primary">Crear Nuevo Productor</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IDproductor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Apellido)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Empresa)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IDproductor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Apellido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Empresa)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IDproductor" class="btn btn-primary">Editar Productor </a>
                        <a asp-action="Details" asp-route-id="@item.IDproductor" class="btn btn-primary">Detalles del Productor</a> |
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>