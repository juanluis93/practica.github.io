@{
    var categorialista = ViewBag.Categorias;
    var productoralista = ViewBag.Productores;
    var generolista = ViewBag.Generos;
}
@model MiniProyecto.Web.Models.SeriesModel
<!DOCTYPE html>
<html>
<head>
    <title>Series Management</title>
    <style>
        /* Estilos generales */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #1a1a1a;
            color: #fff;
        }

        /* Contenido principal */
        main {
            padding: 20px;
            width: 100%;
            box-sizing: border-box;
        }

        /* Listado de series */
        .series-list {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 20px;
        }

        .series-item {
            background-color: #262626;
            padding: 20px;
            text-align: center;
        }

            .series-item img {
                max-width: 100%;
                height: auto;
                margin-bottom: 20px;
            }

            .series-item h3 {
                margin-bottom: 10px;
            }

            .series-item p {
                margin-bottom: 20px;
            }

            .series-item button {
                background-color: #E50914;
                color: #fff;
                border: none;
                padding: 10px 20px;
                font-size: 16px;
                cursor: pointer;
                margin-right: 10px;
            }

        /* Formulario de creación/edición */
        .form-container {
            background-color: #262626;
            padding: 20px;
        }

            .form-container form {
                display: grid;
                grid-template-columns: 1fr 1fr;
                gap: 20px;
            }

            .form-container label {
                display: block;
                margin-bottom: 5px;
            }

            .form-container input,
            .form-container select {
                width: 100%;
                padding: 10px;
                font-size: 16px;
                background-color: #1a1a1a;
                color: #fff;
                border: none;
            }

            .form-container button {
                background-color: #E50914;
                color: #fff;
                border: none;
                padding: 10px 20px;
                font-size: 16px;
                cursor: pointer;
                margin-right: 10px;
            }

            .form-container a {
                background-color: #E50914;
                color: #fff;
                border: none;
                padding: 10px 20px;
                font-size: 16px;
                cursor: pointer;
                margin-right: 10px;
            }
    </style>
</head>
<body>

    <main>



        <!-- Sección de creación/edición de series -->
        <div class="form-container">
            <h2>Crear Serie</h2>
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div>
                    <label asp-for="SerieID">Nombre de la serie:</label>
                    <input asp-for="SerieID" type="text" id="SerieID" name="SerieID" required>
                    <span asp-validation-for="SerieID" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Nombre">Nombre de la serie:</label>
                    <input asp-for="Nombre" type="text" id="name" name="Nombre" required>
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Imagen">Imagen de portada:</label>
                    <input asp-for="Imagen" type="text" id="cover-image" name="Imagen" required>
                    <span asp-validation-for="Imagen" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="URL">Enlace del video de YouTube:</label>
                    <input asp-for="URL" type="text" id="youtube-link" name="URL" required>
                    <span asp-validation-for="URL" class="text-danger"></span>
                </div>
                <div>
                    <label for="production-company">Productora:</label>
                    <select asp-for="IDproductor" asp-items="@(new SelectList(ViewBag.Productores, "IDproductor","Nombre"))">
                        <!-- Agrega más opciones de productoras -->
                    </select>
                    <span asp-validation-for="IDproductor" class="text-danger"></span>
                </div>
                <div>
                    <label for="primary-genre">Género primario:</label>
                    <select asp-for="IDgenero" asp-items="@(new SelectList(ViewBag.Generos, "IDgenero","Tipo"))">
                        <!-- Agrega más opciones de géneros -->
                    </select>
                    <span asp-validation-for="IDgenero" class="text-danger"></span>
                </div>
                <div>
                    <label for="secondary-genre">Género secundario:</label>
                    <select asp-for="IDgenero2" asp-items="@(new SelectList(ViewBag.Generos, "IDgenero","Tipo"))">
                        <!-- Agrega más opciones de géneros -->
                    </select>
                    <span asp-validation-for="IDgenero2" class="text-danger"></span>
                </div>
                <div>
                    <label for="name">Descripcion:</label>
                    <input asp-for="Descripcion" type="text" id="decripcion" name="Descripcion" required>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>
                <div>
                    <label for="primary-genre">Categoria :</label>
                    <select asp-for="IDcategoria" asp-items="@(new SelectList(ViewBag.Categorias, "IDcategoria", "Nombre"))">
                        <!-- Agrega más opciones de géneros -->
                    </select>
                    <span asp-validation-for="IDcategoria" class="text-danger"></span>
                </div>
                <div>
                    <a asp-controller="Series" asp-action="index" class="btn btn-primary">Volver</a>
                    <button type="submit" value="Edit">Guardar Cambios</button>
                </div>
            </form>
        </div>
    </main>
</body>
</html>