@model IEnumerable<MiniProyecto.Web.Models.SeriesModel>
<!DOCTYPE html>
<html>
<head>
    <title>Netflix-Style MVC Design</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-color: #1a1a1a;
        }

        header {
            background-color: #E50914;
            color: #fff;
            padding: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        nav ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            display: flex;
        }

        nav li {
            margin-right: 20px;
        }

        nav a {
            color: #fff;
            text-decoration: none;
        }

        main {
            padding: 20px;
            width: 100%;
            box-sizing: border-box;
        }

        .hero {
            background-color: #000;
            color: #fff;
            padding: 100px 20px;
            text-align: center;
        }

            .hero h1 {
                font-size: 48px;
                margin-bottom: 20px;
            }

            .hero p {
                font-size: 24px;
                margin-bottom: 40px;
            }

            .hero button {
                background-color: #E50914;
                color: #fff;
                border: none;
                padding: 10px 20px;
                font-size: 18px;
                cursor: pointer;
            }

        .content {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 20px;
        }

        .content-item {
            background-color: #262626;
            color: #fff;
            padding: 20px;
            text-align: center;
        }

            .content-item img {
                max-width: 100%;
                height: auto;
                margin-bottom: 20px;
            }

            .content-item h3 {
                margin-bottom: 10px;
            }

            .content-item p {
                margin-bottom: 20px;
            }

            .content-item button {
                background-color: #E50914;
                color: #fff;
                border: none;
                padding: 10px 20px;
                font-size: 16px;
                cursor: pointer;
            }
         

            .content-series a{
                background-color: #E50914;
                color: #fff;
                border: none;
                padding: 10px 20px;
                font-size: 16px;
                cursor: pointer;

        }

      
    </style>
</head>
<body>
    <main>
        <div class="hero">
            <h1>Series</h1>
            <p>Unlimited movies, TV shows, and more.</p>
            <button>Start Watching</button>
        </div>

        <div class="content">
            @foreach (var item in Model)
            {
                <div class="content-item">
                    <img src="@item.Imagen" alt="Series 2">
                    <h3>@item.Nombre</h3>
                    <p>@item.Descripcion</p>
                    <div class="buttons">
                        <button>Watch Now</button>
                        <a asp-controller="Series" asp-action="Edit" asp-route-id="@item.SerieID" class="btn btn-primary">Editar</a>

                    </div>
                </div>
            
                    }

            <!-- Puedes agregar más contenedores aquí según sea necesario -->
        </div>

        <br/>
        <div class="content-series">
          
                <a asp-controller="Series" asp-action="Create" class="btn btn-primary">Agregar series </a>
            </div>
       
    </main>
</body>
</html>