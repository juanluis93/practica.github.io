@model IEnumerable<MiniProyecto.Web.Models.GeneroModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IDgenero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IDgenero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.IDgenero" class="btn btn-primary">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.IDgenero" class="btn btn-primary">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.IDgenero" class="btn btn-primary">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
